@model IEnumerable<Boutique.Models.Produit>

@{
    ViewData["Title"] = "Liste des produits";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Liste des Produits</h2>
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="fa fa-plus-circle"></i> Nouveau Produit
    </a>
</div>

<form class="row mb-4" method="get" asp-action="Index">
    <div class="col-md-5">
        <input type="text" name="Search" class="form-control" placeholder="Rechercher un produit..."
               value="@ViewData["CurrentFilter"]" />
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-search"></i> Rechercher
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fa fa-undo"></i> Réinitialiser
        </a>
    </div>
</form>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>
                <a class="text-white" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"
                   asp-route-search="@ViewData["CurrentFilter"]">
                    Nom du Produit
                </a>
            </th>
            <th>Prix</th>
            <th>En Stock</th>
            <th>Catégorie</th>
            <th style="width: 20%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-danger">Aucun produit trouvé.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td>@item.Prix DT</td>
                    <td>@(item.EnStock ? "Oui" : "Non")</td>
                    <td>@item.Categorie?.Nom</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i> Modifier
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                            <i class="fa fa-info-circle"></i> Détails
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
